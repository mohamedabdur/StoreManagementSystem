@model practice.Models.SellProduct


@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Userindex.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/store.css"  />
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />


    <!--Bootstraps Icons cdn link -->
    <title>Document</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">

</head>
    <header class="header">
        <div class="logo"> <a asp-controller="User" asp-action="Index"><img src="../images/aspire.png"
                    width="80px"></a>
            <span style="font-size: 1.7rem; font-weight: bold; margin-top: 2rem; color: purple;">
                ASPIRE SYSTEMS
            </span>
        </div>
            <div class="menu">
            <a asp-controller="User" asp-action="Index"><i class="bi bi-cart-dash"></i>&nbsp;Home</a>
             <a asp-controller="User" asp-action="Store"><i class="bi bi-cart-dash"></i>&nbsp;Store</a>
            <a asp-controller="User" asp-action="History"><i class="bi bi-cart-dash"></i>&nbsp;History</a>
            <a asp-controller="User" asp-action="MainStore"><i class="bi bi-cart-dash"></i>&nbsp;Main Store</a>
           
            <div class="dropdown">
                <button class="dropbtn"><i class="bi bi-person-circle"></i></button>
                <div class="dropdown-content">
                    <p>@ViewBag.Session</p>
                    <a asp-controller="Home" asp-action="Logout" style="font-size: large;">Logout</a>
                </div>
            </div>
            </div>
    </header>
<body>
    <div class="notify">@ViewBag.Notify</div>
    
    <div class="container-user" >
        <div class="message">
            <a asp-controller="User" asp-action="Message"><i class="bi bi-bell"></i> Send Message</a>
        </div> 
       <h2>@TempData["quantitymessage"]</h2>
        <h1 style="text-align: center; color: rgb(249, 244, 244);">Enter Product details </h1>
        <div class="user-form" >
            <form method="post" style="align-items: center;">
                <div class="username">
                    <label>User Name</label>
                    <input disabled value=@ViewBag.Session width="100%" style="color:#777" >
                </div>


                  <div class="username">
                    <label>Product Name</label>
                   <select name="productname" asp-for="productname" style="font-size: 2rem;">
                    @{
                        foreach(var product in ViewBag.ProductList){

                            <option value=@product.productname name="productname">@product.productname</option>
                        }
                    }
                  </select>
                </div>
                <div class="username">
                    <label>Quantity</label>
                    <input type="number" name = "quantity" asp-for="quantity">
                    <span asp-validation-for="quantity"  class="text-danger"></span>
                   
                </div>
                <div class="username">
                    <label>Date</label>
                    <input type="date" name="senddate" asp-for="senddate">
                    <span asp-validation-for="senddate"  class="text-danger"></span>
                </div>
                <button type="submit">Submit</button>
            </form>
         
        </div>
    </div>
     @section Scripts{
  <partial name="_ValidationScriptsPartial" />
}


</body>

</html>


<script>
    setTimeout(function(){
        $('.notify').fadeOut('slow');
    },5000);
</script>