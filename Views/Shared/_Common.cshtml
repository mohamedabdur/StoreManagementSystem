<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
    <!--Bootstraps Icons cdn link -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">

</head>

<body>
    @* *@




    <header class="header">
        <div class="logo"> <a asp-controller="Home" asp-action="Index"><img src="../images/aspire.png" height="78px"
                    width="80px"></a>
            <span style="font-size: 3rem; font-weight: bold; margin-top: 2.5rem; color: purple;">
                ASPIRE SYSTEMS
            </span>
        </div>
        <div class="menu">
            @* <div class="search">
                <form method="post">
                    <input type="search" asp-route-id="productname" style="background-color: rgb(255, 255, 251); height:3rem; padding:1rem;"
                        placeholder="Search">&nbsp;
                    <button type="submit" style="background-color: white;"><label>&nbsp;<i
                                class="bi bi-search"></i></label></button>
                </form>
            </div>*@

            <a asp-controller="Home" asp-action="Index"><i class="bi bi-house-check-fill"></i>&nbsp;Home</a>
            <a asp-controller="Home" asp-action="Privacy"><i class="bi bi-shield-shaded"></i>&nbsp;About</a>
            <a asp-controller="Home" asp-action="Store"><i class="bi bi-shop"></i>&nbsp;Store</a>
            <a asp-controller="Home" asp-action="SoldHistory"><i class="bi bi-cart-plus"></i>&nbsp;Sold History</a>
            <a asp-controller="Home" asp-action="CustomerRequest"><i class="bi bi-cart-dash"></i>&nbsp;Customer Request</a>
            <div class="dropdown">
                <button class="dropbtn"><i class="bi bi-person-circle"></i></button>
                <div class="dropdown-content">
                    <p>@ViewBag.Session</p>
                    <a asp-controller="Home" asp-action="EditUser">Add User</a>
                    <a asp-controller="Home" asp-action="ViewUser">View Users</a>
                    <a asp-controller="Home" asp-action="Logout">Logout</a>
                </div>
            </div>
            </div>
    </header>
    @RenderBody()
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>

</html>